<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tenant.mapper.TenantMapper">

    <resultMap id="TenantResultMap" type="com.tenant.entity.Tenant">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
    </resultMap>

    <select id="getUserDetails" parameterType="String" resultMap="TenantResultMap">
        select * from tenant where username =#{userName}
    </select>

</mapper>